@using Entities.Models
@model Order
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="text-danger" asp-validation-summary="All"></div>

    <form method="post" asp-controller="Order" asp-action="Checkout">
    @Html.AntiForgeryToken()

    <div class="form-group my-3">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Line1">Line1</label>
        <input class="form-control" asp-for="Line1" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Line2">Line2</label>
        <input class="form-control" asp-for="Line2" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Line3">Line3</label>
        <input class="form-control" asp-for="Line3" />
    </div>
    <div class="form-group my-3">
        <label asp-for="City">City</label>
        <input class="form-control" asp-for="City" />
    </div>
    <div class="form-group my-3">
        <input type="checkbox" asp-for="GiftWrap" />
        <label asp-for="GiftWrap">GiftWrap these items.</label>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">
            Complete Order
        </button>
    </div>
</form>
