@using StoreApp.Infrastructe.Extensions
@model Entities.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="col-sm-12 col-md-4 my-2">
  <div class="card" style="width: 18rem;">
    <!-- Ürün Resmi -->
    <img src="@Model?.ImageUrl" class="card-img-top" alt="@Model?.ProductName">
    
    <div class="card-body">
      <!-- Ürün Adı -->
      <h5 class="card-title">@Model.ProductName</h5>
      
      <!-- Ürün Açıklaması -->
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      
      <!-- Butonlar -->
      <div class="d-flex justify-content-between">
        <!-- Sepete Ekle Butonu -->
        <form asp-page="/cart" method="post" class="d-inline">
          <input type="hidden" asp-for="ProductId" />
          <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
          <button type="submit" class="btn btn-outline-primary">
            <i class="fa fa-cart-plus"></i> Add to Cart
          </button>
        </form>
        
        <!-- Detaylar Linki -->
        <a asp-action="Get" asp-route-id="@Model.ProductId" class="btn btn-primary">
          <i class="fa-solid fa-arrow-right"></i> Details
        </a>
      </div>
    </div>
  </div>
</div>
