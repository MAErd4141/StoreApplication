@{
    Layout="_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Entities.Models


@model IQueryable<Entities.Models.Product>
    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("CategoriesMenu")
            @await Component.InvokeAsync("ProductFilterMenu")
        </div>
        <div class="col-md-9">
            <div class="row my-3">
@foreach (Entities.Models.Product prd in Model)
{
    @await Html.PartialAsync("_ProductCard", prd)
}    
</div>
        </div>
    </div>

 @section Footer{
    <div>
        Only for index footer 
    </div>
 }   
