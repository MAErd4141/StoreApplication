@model StoreApp.Pages.DemoModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{    
}
<div class="my-5 text-center">
    <div class="display-6 my-3">Hello @Model?.FullName</div>
    <p class="text-danger">@HttpContext.Session.GetString("name")</p>
    <form method="post" asp-page="/demo" >
    <div class="form-group">
        <input class="form-control" name="name" placeholder="Enter your name" />
        <input type="submit" class="btn btn-primary my-3" />
    </div>
    </form>
</div> 