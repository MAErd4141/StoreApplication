@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - @ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="/lib/font-awesome/css/all.css" />
</head>
<body>
    <!-- Navbar -->
    @await Html.PartialAsync("_Navbar")

    <!-- Main Content -->
    <div class="container-fluid mt-3">
        <div class="row">
            <!-- Sidebar -->
            <aside class="col-md-3 bg-light border-end p-3 shadow-sm">
                <h6 class="text-muted">Admin Menu</h6>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Index">
                            <i class="fa fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Product" asp-action="Index">
                            <i class="fa fa-box"></i> Products
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Category" asp-action="Index">
                            <i class="fa fa-tags"></i> Categories
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Order" asp-action="Index">
                            <i class="fa fa-shopping-cart"></i> Orders
                        </a>
                    </li>
                </ul>
            </aside>

            <!-- Content Area -->
            <main class="col-md-9">
                <div class="p-3 bg-white shadow-sm rounded">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-4">
        <p class="mb-0">Admin Panel - StoreApp Â© 2025</p>
    </footer>
</body>
</html>
